# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_ALLOWED_CHAT_IDS=123456789,-987654321  # Optional: if not set, bot works in any chat

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO

# Thresholds and Limits
DEFAULT_APPROVAL_THRESHOLD=100
RATE_LIMIT_PER_MINUTE=30

# Scheduled Jobs
DAILY_REPORT_TIME=08:00
WEEKLY_BACKUP_DAY=0  # Monday
WEEKLY_BACKUP_TIME=09:00

# Background Worker Settings
WORKER_SLEEP_INTERVAL=10  # seconds between polling cycles
